{
  "design_system": {
    "style": {
      "theme": "modern_ecommerce",
      "color_palette": {
        "primary": "#E53935", 
        "secondary": "#FFD600", 
        "neutral_light": "#FFFFFF",
        "neutral_dark": "#212121",
        "accent": "#F5F5F5"
      },
      "typography": {
        "heading": {
          "font_family": "Sans-serif",
          "font_weight": "700",
          "size_scale": ["32px", "24px", "18px"]
        },
        "body": {
          "font_family": "Sans-serif",
          "font_weight": "400",
          "size_scale": ["16px", "14px"]
        },
        "buttons_links": {
          "font_family": "Sans-serif",
          "font_weight": "600",
          "size": "14px",
          "text_transform": "uppercase"
        }
      },
      "buttons": {
        "primary": {
          "background": "primary",
          "text_color": "white",
          "border_radius": "6px",
          "hover_state": {
            "background": "#C62828"
          }
        },
        "secondary": {
          "background": "neutral_light",
          "border": "1px solid primary",
          "text_color": "primary",
          "hover_state": {
            "background": "#FFEBEE"
          }
        }
      },
      "icons": {
        "style": "outlined_minimal",
        "usage": ["navigation", "cart", "search", "categories"]
      },
      "spacing": {
        "container_padding": "20px",
        "grid_gap": "16px"
      },
      "shadows": {
        "card": "0 2px 6px rgba(0,0,0,0.1)"
      }
    },
    "layout": {
      "header": {
        "sections": [
          "logo_area",
          "search_bar",
          "account_links",
          "cart_icon"
        ],
        "style": "sticky_top"
      },
      "navigation": {
        "orientation": "horizontal",
        "items": ["home", "about", "shop", "contact", "pages"],
        "highlight_style": "underline_or_color_change"
      },
      "sidebar": {
        "position": "left",
        "content": ["categories_list", "filters", "promotional_links"],
        "style": "minimal_icon_text_list"
      },
      "hero_section": {
        "layout": "split_banner",
        "elements": ["promo_text", "cta_button", "visual_image"],
        "background_style": "light"
      },
      "brand_strip": {
        "type": "horizontal_logo_slider",
        "spacing": "evenly_distributed"
      },
      "product_grid": {
        "columns": 4,
        "card_design": {
          "image_position": "top",
          "info_layout": "stacked",
          "price_emphasis": "highlighted_color",
          "cta_button": "add_to_cart_or_buy"
        }
      },
      "promotions": {
        "flash_sale_banner": {
          "countdown_timer": true,
          "highlight_color": "secondary"
        },
        "badge_styles": {
          "sale": {
            "background": "secondary",
            "text_color": "black",
            "border_radius": "12px"
          }
        }
      },
      "footer": {
        "sections": ["links", "newsletter_signup", "social_icons"],
        "style": "multi_column"
      }
    },
    "interactions": {
      "hover_effects": {
        "product_card": "lift_with_shadow",
        "button": "color_shift"
      },
      "transitions": {
        "default": "all 0.3s ease"
      }
    },
    "components": [
      "navbar",
      "search_bar",
      "category_sidebar",
      "hero_banner",
      "brand_logo_slider",
      "product_card",
      "flash_sale_timer",
      "footer"
    ]
  }
}
